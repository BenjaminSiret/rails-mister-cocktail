<div class="container d-flex justify-content-center m-4">
  <div class="card justify-content-center" style="width: 36rem; height: 26rem;">
    <img class="card-img-top" src="https://images.unsplash.com/photo-1572590016064-3e6ae9c04947?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTZ8fGNvY2t0YWlsfGVufDB8fDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="Card image cap">
    <div class="card-body justify-content-center">
      <h1 class="card-title"><%= @cocktail.name  %></h1>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to 'delete', dose_path(dose),
                        method: :delete,
                        data: { confirm: "Are you sure?" }%></li>
          <% end %>
          <div class="container">
            <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class:"btn -btn-outline-secondary" %>
          </div>
        </ul>
    </div>
</div>
    <div class="container m-4">
      <%= link_to "back to list", cocktails_path, class:"btn btn-outline-secondary" %>
    </div>
</div>

