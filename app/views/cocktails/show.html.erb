<div class="container">
  <h1><%= @cocktail.name  %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to 'delete', dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" }%></li>
    <% end %>
    <li><%= link_to('Add a dose', new_cocktail_dose_path(@cocktail)) %></li>
  </ul>
</div>

<div class="container">
  <%= link_to "back to list", cocktails_path %>
</div>

