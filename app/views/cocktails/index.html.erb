<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h1>All our cocktails</h1>
  <%= link_to 'Add a cocktail',new_cocktail_path %>
</div>
<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1496318447583-f524534e9ce1?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTh8fGNvY2t0YWlsc3xlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');">
  <div class="container d-flex justify-content-around">
    <% @cocktails.each do |cocktail| %>
    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
      </div>
    </div>
    <% end %>
  </div>
</div>
